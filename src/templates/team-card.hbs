{{#each this}}
<li class="team-modal__item">
    <div class="team-modal__thumb">
        <div class="img__thumb"><img class="team-modal__img" src="{{foto}}" alt="{{name}}" /></div>
        <div class="overlay">
            <div class="team-modal__content">
                <h3 class="team-modal___title-overlay">{{location}}</h3>
                <div class="team-modal_contacts">
                    <a class="team-modal__tel link" href="tel:{{tel}}">{{tel}}</a>
                    <a class="team-modal__email link" href="mailto:{{mail}}">{{mail}}</a>
                </div>
                <div class="social team-modal__socials">
                    <ul>
                        <li class="linkedin">
                            <a href="{{linkedin}}"><i class="fab fa-instagram"></i></a>
                        </li>
                        <li class="github">
                            <a href="{{github}}"><i class="fab fa-vimeo-v"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="info">
        <span class="message">
            <a href="#"><i class="fas fa-envelope-open"></i></a>
        </span>
        <h3 class="team-modal__name">{{name}}</h3>
        <p class="team-modal__role">{{role}}</p>
    </div>
</li>
{{/each}}