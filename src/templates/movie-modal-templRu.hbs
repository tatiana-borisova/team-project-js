<div class='modal-movie'>
  <div class='wrapper-image'>
    <img
      class='modal-movie__poster'
      src='https://image.tmdb.org/t/p/w500{{this.poster_path}}'
      alt='No poster for movie {{title}}'
    />
  </div>
  <div class='modal-movie__right-content'>
    <p class='modal-movie__name'>{{title}}</p>
    <div class='modal-movie__data'>

      <table class='modal-movie__table'>
        <tr>
          <td class='modal-movie__indicators--item'>Рейтинг / Голоса</td>
          <td class='modal-movie__votes'><span
              class='vote'
            >{{vote_average}}</span><span class='modal-movie__slash'> /</span>
            {{vote_count}}</td>
        </tr>
        <tr>
          <td class='modal-movie__indicators--item'>Популярность</td>
          <td class='modal-movie__popularity'>{{popularity}}</td>
        </tr>
        <tr>
          <td class='modal-movie__indicators--item'>Оригинальное название</td>
          <td class='modal-movie__title'>{{original_title}}</td>
        </tr>
        <tr>
          <td
            class='modal-movie__indicators--item modal-movie__indicators--last-item'
          >Жанры</td>
          <td class='modal-movie__genre'>
            {{#each genres}}
              {{this.name}}
            {{/each}}
          </td>
        </tr>

      </table>

    </div>
    <p class='modal-movie__about'>О фильме</p>
    <p class='modal-movie__description'>
      {{overview}}
    </p>
    <div class='modal-movie__buttons modal-movie__buttons--rus'>
      <button
        class='modal-movie__buttons--watched modal-movie__button button button--orange'
      >
        В просмотренные
      </button>
      <button class='modal-movie__buttons--delete-watched modal-movie__button button button--orange lang-add visually-hidden'>
        удалить из просмотренного
      </button>
      <button
        class='modal-movie__buttons--queue modal-movie__button button button--black'
      >
        В очередь
      </button>
      <button class='modal-movie__buttons--delete-queue modal-movie__button button button--black visually-hidden'>
        удалить из очереди
      </button>
  </div>
</div>