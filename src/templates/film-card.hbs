{{! Шаблон одной карточки }}
{{#each this}}
  <li class='gallery__item gallery-js'>
    <a class='gallery__link link link-js' href='#' id='{{id}}'>
      <div class='gallery__thumb-image'>
        <img
          class='gallery__image'
          src='https://image.tmdb.org/t/p/w500{{poster_path}}'
          alt='No poster for movie {{title}}'
        />
      </div>
      <div class='gallery__title-wrap'>
        <h2 class='gallery__title'> {{title}} </h2>
        <p class='gallery__accent'><span class='gallery__genres'>
            {{genres}}
          </span><span class='gallery__date'>|
            {{release_date}}
          </span><span class='vote vote--margin-left'>{{vote_average}}</span>
        </p>
      </div>
    </a>
  </li>
{{/each}}